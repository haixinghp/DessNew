/*********************************************************************************************************************
* Function Name :  DRV_MIB5024_SpiWrite()
* Description   :  写数据
* Para          :  data=待写入数据
* Return        :  I2C_FALSE = 失败  I2C_TRUE = 成功
*********************************************************************************************************************/
static uint8_t DRV_MIB5024_SpiWrite(const uint16_t data)
{
    uint16_t i;
    uint16_t tmp = 0;
    MBI5024_POWER_FUN_ON;

    tmp = data;
    
    for( i =0 ; i < 16; i++ )
    {
        MBI5024_CLK_FUN_OFF;
        PUBLIC_Delayus(2);		//fmax = 25Mhz
        if (tmp & 0x8000)
            MBI5024_SDI_FUN_ON;
        else
            MBI5024_SDI_FUN_OFF;

        tmp <<=1;
        PUBLIC_Delayus(2);
        MBI5024_CLK_FUN_ON;
        PUBLIC_Delayus(4);
    }
    PUBLIC_Delayus(2);
    MBI5024_LE_FUN_ON; //  LE高脉冲锁存 20ns
    PUBLIC_Delayus(2);
    MBI5024_LE_FUN_OFF;
    PUBLIC_Delayus(4);
    return BUS1_TRUE;
}

/*********************************************************************************************************************
* Function Name :  DRV_MIB5024_PinSet()
* Description   :  单个引脚控制
* Para          :  pinNo= 引脚编号  pinSet= 输出类型
* Return        :  I2C_FALSE = 失败  I2C_TRUE = 成功
*********************************************************************************************************************/
uint8_t DRV_MIB5024_PinSet(uint16_t pinNo, uint16_t pinSet )
{
    
   pinNo = pinNo - PIN_OFFSET;
   if( MIB5024_OUT_LOW == pinSet )
   {
	  PinCtrlSet |= (1 << pinNo);
   }
   else 
   {
      PinCtrlSet &= ~(1 << pinNo);
   }
    
   uint8_t ret = DRV_MIB5024_SpiWrite(PinCtrlSet);
	
   return ret;
}


/*********************************************************************************************************************
* Function Name :  DRV_MIB5024_FileInit()
* Description   :  初始化
* Para          :  无
* Return        :  I2C_FALSE = 失败  I2C_TRUE = 成功
*********************************************************************************************************************/
void DRV_MIB5024_FileInit( void )
{
    MBI5024_CLK_FUN_OFF;
    MBI5024_SDI_FUN_OFF;
    MBI5024_LE_FUN_ON;
    MBI5024_POWER_FUN_ON;
    
    PUBLIC_Delayms(1);
    
    PinCtrlSet = 0xFFFF;
    
    return;
}

/*********************************************************************************************************************
* Function Name :  DRV_MIB5024_WakeupInit()
* Description   :  唤醒后配置
* Para          :  无
* Return        :  void
*********************************************************************************************************************/
void DRV_MIB5024_WakeupInit( void ) 
{
   
    MBI5024_CLK_FUN_OFF;
    MBI5024_SDI_FUN_OFF;
    MBI5024_LE_FUN_ON;
    MBI5024_POWER_FUN_ON;
    
	return;
}

/*********************************************************************************************************************
* Function Name :  DRV_MIB5024_SleepInit()
* Description   :  休眠配置
* Para          :  无
* Return        :  void
*********************************************************************************************************************/
void DRV_MIB5024_SleepInit( void ) 
{
    MBI5024_POWER_FUN_OFF;
	return; 
}

